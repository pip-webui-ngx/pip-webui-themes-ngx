{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/pip-webui-themes-ngx",
  "lib": {
    "entryFile": "src/public_api.ts"
  },
  "assets": [
    {
      "input": "themes",
      "glob": "**/*",
      "output": "themes"
    },
    {
      "input": "src",
      "glob": "**/*.scss",
      "output": ""
    }
  ],
  "allowedNonPeerDependencies": [
    "lodash-es"
  ]
}
